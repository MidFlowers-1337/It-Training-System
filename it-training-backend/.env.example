# IT Training System - Backend Environment Configuration
# Copy this file to .env and fill in your values

# JWT Configuration
# JWT signing secret key (at least 32 characters)
JWT_SECRET=

# Database Configuration
DB_HOST=
DB_PORT=
DB_NAME=
DB_USERNAME=
DB_PASSWORD=

# Redis Configuration (用于验证码缓存)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ============================================================================
# AI Service Configuration (OpenAI Compatible API)
# ============================================================================
# 本系统支持所有符合 OpenAI API 格式的 AI 服务，包括：
# - OpenAI (GPT-3.5, GPT-4)
# - DeepSeek
# - 通义千问 (Qwen)
# - 智谱AI (GLM)
# - Moonshot (Kimi)
# - 其他 OpenAI 兼容服务

# AI API Key (必填)
AI_API_KEY=your-api-key-here

# AI 服务基础 URL (必填)
# 不同服务的 base-url 示例：
# - OpenAI:        https://api.openai.com
# - DeepSeek:      https://api.deepseek.com
# - 通义千问:       https://dashscope.aliyuncs.com/compatible-mode/v1
# - 智谱AI:        https://open.bigmodel.cn/api/paas/v4
# - Moonshot:      https://api.moonshot.cn/v1
# - 自建中转站:     https://your-proxy.com/v1
AI_BASE_URL=https://api.deepseek.com

# AI 模型名称 (必填)
# 不同服务的模型名称示例：
# - OpenAI:        gpt-3.5-turbo, gpt-4, gpt-4-turbo
# - DeepSeek:      deepseek-chat, deepseek-coder
# - 通义千问:       qwen-turbo, qwen-plus, qwen-max
# - 智谱AI:        glm-4, glm-3-turbo
# - Moonshot:      moonshot-v1-8k, moonshot-v1-32k
AI_MODEL=deepseek-chat

# AI 推荐功能开关 (可选，默认: true)
AI_RECOMMEND_ENABLED=true

# AI 请求超时时间，单位毫秒 (可选，默认: 10000)
AI_RECOMMEND_TIMEOUT=10000

# AI 服务失败时是否使用降级策略 (可选，默认: true)
AI_RECOMMEND_FALLBACK=true
